<div class="row justify-content-center">
	{%- for block in section.blocks -%}
		{%- if block.settings.image != blank -%}
		<div class="col-6 col-lg-3 py-1 {% cycle 'pl-2 pr-1', 'pl-1 pr-2' %} px-lg-2 py-lg-2 text-center" {{ block.shopify_attributes }}>
			{%- if block.settings.url != blank -%}<a href="{{ block.settings.url }}" target="_blank" rel="noopener" title="IG post: {{ block.settings.url }}">{%- endif -%}
				{%- render 'image_tag' image: block.settings.image, image_class: 'img-fluid' -%}
			{%- if block.settings.url != blank -%}</a>{%- endif -%}
		</div>
		{%- endif -%}
	{%- endfor -%}
</div>

{% schema %}
{
	"name": "ZenPose Images",
	"tag": "section",
	"class": "zenpose-images",
	"settings": [
	  {
		"type": "header",
		"content": "Pose"
	  }
	], 
	"blocks": [
      {
		  "name": "IG",
		  "type": "instagram",
		  "limit": 12,
		  "settings": 
          [
             {
				"type": "image_picker",
				"id": "image",
				"label": "IG image"
			},
			{
				"type": "url",
				"id": "url",
				"label": "Link"
			}
          ]
	  }
   ]
}
{% endschema %}