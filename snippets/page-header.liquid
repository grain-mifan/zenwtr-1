{%- comment %}

  Page Header
  ------------------------------------------------------------------------------

  Usage:

  {% include 'page-header',
              ph_title: { string } - optional
              ph_subtitle: { string } - optional
              ph_alignment: { string } - optional - must be "left" or "right"
  %}

{% endcomment -%}

{% if ph_title != blank or ph_subtitle != blank %}

  <div class="page-header {% if ph_alignment == 'left' or ph_alignment == 'right' %}page-header--{{ ph_alignment }}{% endif %}">
    {% if ph_title != blank %}
      <h1 class="page-header__title">{{ ph_title | strip }}</h1>
    {% endif %}
    {% if ph_subtitle != blank %}
      <p class="page-header__subtitle">{{ ph_subtitle | strip }}</p>
    {% endif %}
    {% if template == "collection" %}
    <h4>Ultra-purified alkaline water and the worldâ€™s only beverage in a bottle made from 100% recycled, certified ocean-bound plastic.</h4>
    {% endif %}
    {% comment %}
    {% if template == "collection" %}
    <span style="color:#FF0000;">Orders received by 10AM pt will ship same day. Orders received after 10AM pt will ship next day.</span>
    {% endif %}
    {% endcomment %}
  </div>

{% endif %}